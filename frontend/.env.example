# Frontend Environment Variables
# Copy this file to .env.local and fill in with your actual values

# API Configuration - IMPORTANT: NO /api at the end!
# Development (backend must be running on localhost:8083)
VITE_API_BASE_URL=http://localhost:8083

# Production (Render backend)
# VITE_API_BASE_URL=https://giet-alumni-association-platform.onrender.com

# Socket.IO Configuration - Should match API origin (NO /api)
# Development
VITE_SOCKET_URL=http://localhost:8083

# Production (Render)
# VITE_SOCKET_URL=https://giet-alumni-association-platform.onrender.com

# Environment
VITE_ENV=production# App Name
VITE_APP_NAME=GIET Alumni Connect

# Feature Flags (optional)
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
